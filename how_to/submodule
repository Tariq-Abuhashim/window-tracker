# Create and initialize the main repository

mkdir my_main_repo
cd my_main_repo
git init
echo "# My Main Repository" >> README.md
git add README.md
git commit -m "Initial commit"

# Add the submodule
git submodule add https://github.com/cvg/limap.git limap
git add .gitmodules limap
git commit -m "Added limap submodule"

# Add the submodule
git submodule add https://github.com/colmap colmap
git add .gitmodules colmap
git commit -m "Added colmap submodule"


# Cloning a Repository with Submodules

git clone https://github.com/yourusername/my_main_repo.git
cd my_main_repo
git submodule update --init --recursive